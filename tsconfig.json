{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "es5",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node", "@types/facebook-js-sdk"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
